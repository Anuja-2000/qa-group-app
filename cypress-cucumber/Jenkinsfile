pipeline {
    agent any

    tools {
        nodejs 'NodeJs'
    }
    stages {
        stage('Checkout Code') {
            steps {
                // Checkout code from version control
                checkout scm
            }
        }
       
            stage('Install Dependencies') {
                 
                steps {
                    dir('cypress-cucumber') {
                    // Install project dependencies
                    sh 'npm install'
                }
                 }
            }

            stage('Run Cypress Tests') {
                 
                steps {
                    dir('cypress-cucumber') {
                    // Run Cypress tests
                    sh 'npx cypress run'
                }
                 }
            }
        
    }
}